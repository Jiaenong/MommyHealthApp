<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutUC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nurse.UnusualCircumtancesActivity">

    <ProgressBar
        android:id="@+id/progressBarUC"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutUC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customborder">

                <TextView
                    android:id="@+id/textView114"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:maxWidth="250dp"
                    android:text="@string/secN_circum_eclampsia"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBoxUCEclampsia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txtViewUCEclampsiaDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView114"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/secN_Date"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/txtViewUCEclampsiaPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView114"
                    android:layout_toRightOf="@id/txtViewUCEclampsiaDate"
                    android:layout_marginLeft="10dp"
                    android:text="@string/secN_medicalPersonnale_name"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customborder">

                <TextView
                    android:id="@+id/textView117"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:maxWidth="250dp"
                    android:text="@string/secN_circum_diabetes"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBoxDiabetes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txtViewDiabetesDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView117"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/secN_Date"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/txtViewDiabetesPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView117"
                    android:layout_toRightOf="@id/txtViewDiabetesDate"
                    android:layout_marginLeft="10dp"
                    android:text="@string/secN_medicalPersonnale_name"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customborder">

                <TextView
                    android:id="@+id/textView120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:maxWidth="250dp"
                    android:text="@string/secN_circum_anemia"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBoxAnemia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txtViewAnemiaDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView120"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/secN_Date"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/txtViewAnemiaPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView120"
                    android:layout_toRightOf="@id/txtViewAnemiaDate"
                    android:layout_marginLeft="10dp"
                    android:text="@string/secN_medicalPersonnale_name"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customborder">

                <TextView
                    android:id="@+id/textView123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:maxWidth="250dp"
                    android:text="@string/secN_circum_bleeding_pregnancy"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBoxBleeding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txtViewBleedingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView123"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/secN_Date"
                    android:textColor="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/txtViewBleedingPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView123"
                    android:layout_toRightOf="@id/txtViewBleedingDate"
                    android:layout_marginLeft="10dp"
                    android:text="@string/secN_medicalPersonnale_name"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUCSave"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/save"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUCCancel"
                style="@style/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:text="@string/cancel"
                app:cornerRadius="16dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>